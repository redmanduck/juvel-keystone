<div class="container sukhumvit">
		<div class="page-header row juvel-header">
		<div class="container sukhumvit">
			<h2>ข้อมูลของฉัน</h2>
		</div>
		</div>
	<form action="/me/information" method="post">
		<div class="row">
			<div class="col-md-3">
				{{> account-nav section='information' }}
			</div>
			<div class="col-md-9">
				<div class="row">
					<div class="form-group col-md-4  sukhumvit">
						<label for="name">ชื่อ</label>
						<input type="text" class="form-control" name="info[name][first]" value="{{ info.name.first }}" placeholder="Your Name">
					</div>
					<div class="form-group col-md-4  sukhumvit">
						<label for="name">นามกสุล</label>
						<input type="text" class="form-control" name="info[name][last]" value="{{ info.name.last }}" placeholder="Your Name">
					</div>
					<div class="form-group  col-md-8 sukhumvit">
						<label for="name">Email</label>
						<input type="email" class="form-control" name="info[email]" value="{{ info.email }}" placeholder="" size="5"/>
					</div>
					<div class="form-group col-md-8 sukhumvit">
						<label for="name">Mobile Phone</label>
						<input type="text" class="form-control" name="info[phone]" placeholder="Contact Number" value="{{ info.phone }}" placeholder="" size="5"/>
					</div>
					<div class="form-group col-md-8 sukhumvit">
						<label for="name">ที่อยู่</label>
						<input type="text" class="form-control" name="info[address][street1]" value="{{ info.address.street1 }}"  placeholder="บ้านเลขที่ หมู่บ้าน"/>
						<input type="text" class="form-control" name="info[address][street2]" value="{{ info.address.street2 }}"   placeholder="ซอย ถนน" style="margin-top:5px"/>
						<input type="text" class="form-control" name="info[address][suburb]" value="{{ info.address.suburb }}"   placeholder="ตำบล / เขต " style="margin-top:5px"/>
						<input type="text" class="form-control" name="info[address][state]" value="{{ info.address.state }}"  value="กรุงเทพ / Bangkok" style="margin-top:5px"/>
						<input type="text" class="form-control" name="info[address][postcode]"  value="{{ info.address.postcode }}"  placeholder="รหัสไปรษณีย์" size="5" style="margin-top:5px"/>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<button type="submit" class="btn btn-primary sukhumvit">บันทึก / Save</button>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
