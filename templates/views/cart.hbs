<div class="container">
<div class="page-header juvel-header row sukhumvit">
			<div class="container sukhumvit">
				<h3><i class="fa fa-shopping-bag" aria-hidden="true"></i> &nbsp; Shopping Bag</h3>
			</div>
		</div>
	<form action="/checkout" method="post">
		
		<div class="row sukhumvit">
			<div class="col-md-10 col-md-offset-1">
				{{#unless cart}}
				<div class="container">
					<p>คุณยังไม่ได้ใส่สินค้าเข้าตะกร้า</p>
					<p>
						<a href="/products" class="btn btn-default btn-large">
						Explore Catalog
						</a>
					</p>
				</div>
				{{/unless}}

				<table  style="width:100%">
					<tbody>
						{{#each cart}}
						<tr>
							<td width="45px">
								<img class="media-object img-rounded" src="{{ mainImage.url }}" width="45px" style="margin: 5px">
							</td>
							<td><a href="#">{{ title }}</a></td>
							<td><span class="cart-item-price" data-price="{{ basePrice }}">{{ basePrice }}</span> <small>บาท</small></td>
							<td>
								<input type="text" name="qtySet[{{_id}}]" value="{{ qty }}" class="form-control" size="1"></input>
							</td>
							<td>
								<a class="btn btn-link"><i class="fa fa-trash-o"></i> เอาออก</a> 
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>

			</div>
		</div>
		{{#if cart}}
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<br/>
			</div>
		</div>
		<div class="row">

			<div class="col-md-10 col-md-offset-1 align-right">
				

				<a href="/products" class="btn btn-default sukhumvit">Continue Shopping</a>
				<button type="submit" class="btn btn-primary sukhumvit">CHECKOUT
				<i class="fa fa-chevron-right"></i></button>
				
			</div>	
		</div>
		{{/if}}
	
</form>